#:kivy 2.0.0

# 美颜相机应用样式定义

<CameraPreview>:
    allow_stretch: True
    keep_ratio: True

<Button>:
    background_normal: ''
    background_color: 0.3, 0.3, 0.3, 1
    color: 1, 1, 1, 1
    border_radius: [10,]

<Slider>:
    cursor_size: 20, 20
    cursor_image: ''
    cursor_color: 0.2, 0.8, 0.4, 1

<Label>:
    color: 0.9, 0.9, 0.9, 1
    font_size: '14sp'
